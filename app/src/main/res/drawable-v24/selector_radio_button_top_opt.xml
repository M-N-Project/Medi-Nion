<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:top="2dp" android:right="2dp" android:left="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#85AFD6" />

            <corners
                android:topLeftRadius="18dp"
                android:topRightRadius="18dp"/>
        </shape>
    </item>
    <item android:state_checked="false" android:top="2dp" android:right="2dp" android:left="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />

            <corners
                android:topLeftRadius="18dp"
                android:topRightRadius="18dp"/>
        </shape>
    </item>
    <item android:state_hovered="true" android:top="2dp" android:right="2dp" android:left="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#85AFD6" />

            <corners
                android:topLeftRadius="18dp"
                android:topRightRadius="18dp"/>
        </shape>
    </item>
</selector>