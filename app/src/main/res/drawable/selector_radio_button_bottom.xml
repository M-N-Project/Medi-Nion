<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:bottom="2dp" android:right="2dp" android:left="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#8BE0C4" />

            <corners
                android:bottomRightRadius="18dp"
                android:bottomLeftRadius="18dp"/>
        </shape>
    </item>
    <item android:state_checked="false" android:bottom="2dp" android:right="2dp" android:left="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners
                android:bottomRightRadius="18dp"
                android:bottomLeftRadius="18dp"/>
        </shape>
    </item>
    <item android:state_hovered="true" android:state_drag_hovered="true" android:state_focused="true" android:bottom="2dp" android:right="2dp" android:left="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#8BE0C4" />
            <corners
                android:bottomRightRadius="18dp"
                android:bottomLeftRadius="18dp"/>
        </shape>
    </item>
</selector>