<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true"
        android:bottom="0dp"
        android:right="2dp"
        android:top="0dp"
        android:left="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#8BE0C4" />

        </shape>
    </item>
    <item android:state_checked="false" android:bottom="0dp"
        android:right="2dp"
        android:top="0dp"
        android:left="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />

        </shape>
    </item>
    <item android:state_hovered="true" android:bottom="0dp"
        android:right="2dp"
        android:top="0dp"
        android:left="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#8BE0C4" />

        </shape>
    </item>
</selector>