<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/basicboard_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/main_border_gray"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/basicboard_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:focusable="true"
                android:text="자유 게시판"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="TouchTargetSizeCheck" />

            <ImageView
                android:id="@+id/arrow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="1dp"
                android:baselineAlignBottom="true"
                app:srcCompat="@drawable/arrow_resize" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/main_border_gray"
            android:paddingBottom="5dp">

            <LinearLayout
                android:id="@+id/jobboard_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/jobboard_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="직종별 게시판"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/jobboard_Info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="10dp"
                    android:text="권한 필요"
                    android:clickable="true"
                    android:focusable="true" />

                <ImageView
                    android:id="@+id/arrow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="103dp"
                    android:layout_marginTop="1dp"
                    android:baselineAlignBottom="true"
                    app:srcCompat="@drawable/arrow_resize"
                    android:rotation="90"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/jobboard_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/doctor_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp"
                    android:text="· 의사 게시판"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/nurse_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp"
                    android:text="· 간호사 게시판"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/engineer_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp"
                    android:text="· 의료기사 게시판"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/office_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp"
                    android:text="· 사무직 게시판"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/student_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp"
                    android:text="· 학생 게시판"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/main_border_gray"
            android:paddingBottom="5dp">

            <LinearLayout
                android:id="@+id/deptboard_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/deptboard_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="진료과별 게시판"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/deptboard_Info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="권한 필요"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/arrow3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="102dp"
                    android:layout_marginTop="1dp"
                    android:baselineAlignBottom="true"
                    app:srcCompat="@drawable/arrow_resize"
                    android:rotation="90"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/deptboard_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:layout_marginStart="24dp">

                <TextView
                    android:id="@+id/internal_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp"
                    android:text="· 내과 게시판"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/surgical_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp"
                    android:text="· 외과 게시판"
                    android:clickable="true"/>

                <TextView
                    android:id="@+id/machui_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp"
                    android:text="· 마취통증의학과 게시판"
                    android:clickable="true"/>

                <TextView
                    android:id="@+id/pathology_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp"
                    android:text="· 병리과 게시판"
                    android:clickable="true"/>

                <TextView
                    android:id="@+id/urology_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp"
                    android:text="· 비뇨의학과 게시판"
                    android:clickable="true"/>

                <TextView
                    android:id="@+id/pregnancy_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp"
                    android:text="· 산부인과 게시판"
                    android:clickable="true"/>

                <TextView
                    android:id="@+id/cosmetic_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp"
                    android:text="· 성형외과 게시판"
                    android:clickable="true"/>

                <TextView
                    android:id="@+id/child_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp"
                    android:text="· 소아청소년과 게시판"
                    android:clickable="true"/>
                <TextView
                    android:id="@+id/neuro_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp"
                    android:text="· 신경과 게시판"
                    android:clickable="true"/>
                <TextView
                    android:id="@+id/eye_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp"
                    android:text="· 안과 게시판"
                    android:clickable="true"/>
                <TextView
                    android:id="@+id/video_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp"
                    android:text="· 영상의학과 게시판"
                    android:clickable="true"/>
                <TextView
                    android:id="@+id/urgent_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp"
                    android:text="· 응급의학과 게시판"
                    android:clickable="true"/>
                <TextView
                    android:id="@+id/ear_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp"
                    android:text="· 이비인후과 게시판"
                    android:clickable="true"/>
                <TextView
                    android:id="@+id/psy_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp"
                    android:text="· 정신건강의학과 게시판"
                    android:clickable="true"/>
                <TextView
                    android:id="@+id/bone_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp"
                    android:text="· 정형외과 게시판"
                    android:clickable="true"/>
                <TextView
                    android:id="@+id/tooth_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp"
                    android:text="· 치과 게시판"
                    android:clickable="true"/>
                <TextView
                    android:id="@+id/skin_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp"
                    android:text="· 피부과 게시판"
                    android:clickable="true"/>
                <TextView
                    android:id="@+id/oriental_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp"
                    android:text="· 한의과 게시판"
                    android:clickable="true"/>
                <TextView
                    android:id="@+id/etcDept_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp"
                    android:text="· 기타 게시판"
                    android:clickable="true"/>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/marketboard_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/main_border_gray"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/marketboard_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="장터 게시판"
                android:clickable="true"
                android:focusable="true" />

            <ImageView
                android:id="@+id/arrow4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="1dp"
                android:baselineAlignBottom="true"
                app:srcCompat="@drawable/arrow_resize"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/QnAboard_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20dp"
            android:background="@drawable/main_border_gray"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/QnAboard_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="QNA 게시판"
                android:clickable="true"
                android:focusable="true" />

            <ImageView
                android:id="@+id/arrow5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="197dp"
                android:layout_marginTop="1dp"
                android:baselineAlignBottom="true"
                app:srcCompat="@drawable/arrow_resize"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>