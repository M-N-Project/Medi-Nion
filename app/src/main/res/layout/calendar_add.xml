<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/calendar_add_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout15"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/schedule_title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="#ffffff"
                android:ems="1"
                android:hint="일정 이름"
                android:inputType="textPersonName"
                android:textSize="16sp"
                tools:ignore="TouchTargetSizeCheck"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="16dp" />

            <!--        <Spinner-->
            <!--            android:id="@+id/schedule_history_spinner"-->
            <!--            android:visibility="gone"-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="48dp"-->
            <!--            android:layout_marginLeft="5dp"-->
            <!--            android:layout_marginRight="5dp"-->
            <!--            android:ems="5"-->
            <!--            android:spinnerMode="dropdown"/>-->


            <ScrollView
                android:id="@+id/calendarHistoryScrollView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/calendarHistoryRecyclerView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/calendar_history_item" />
            </ScrollView>
            <View
                android:id="@+id/view1"
                android:layout_width="387dp"
                android:layout_height="1dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:background="#8085AFD6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/start_date_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/start_date_pick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="0000-00-00"
                        android:textSize="16sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="~  " />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/end_date_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/end_date_pick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="0000-00-00"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>


            <View
                android:id="@+id/view"
                android:layout_width="387dp"
                android:layout_height="1dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="#8085AFD6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/start_time_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/day_night1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="오전"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/start_result"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="00   :   00"
                        android:textSize="16sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="~  " />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/end_time_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/day_night2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:text="오전"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/end_result"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="00   :   00"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/view2"
                android:layout_width="387dp"
                android:layout_height="1dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:background="#8085AFD6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/schedule_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="15dp"
                    android:gravity="center"
                    android:text="색상"
                    android:textSize="16sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/schedule_color_imageView"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="280dp"
                    android:background="@drawable/calendar_color"
                    android:backgroundTint="#BADFD2"
                    android:gravity="center" />

            </LinearLayout>

            <View
                android:id="@+id/view3"
                android:layout_width="387dp"
                android:layout_height="1dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:background="#8085AFD6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/schedule_alarm_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:text="알람"
                    android:textSize="16sp" />

                <!--            <TextView-->
                <!--                android:id="@+id/schedule_alarm"-->
                <!--                android:layout_width="wrap_content"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                android:layout_weight="0"-->
                <!--                android:layout_marginTop="15dp"-->
                <!--                android:text="설정 안함"-->
                <!--                android:textSize="16sp"/>-->

                <LinearLayout
                    android:id="@+id/alarm_linearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp">
                <TextView
                    android:id="@+id/alarm_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="설정 안함"/>

                <android.widget.Button
                    android:id="@+id/alarm_btn"
                    android:layout_width="12dp"
                    android:layout_height="11dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="36dp"
                    android:background="@drawable/arrow_resize"
                    android:rotation="-270"/>
                </LinearLayout>


            </LinearLayout>

            <View
                android:id="@+id/view4"
                android:layout_width="387dp"
                android:layout_height="1dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:background="#8085AFD6" />

            <LinearLayout
                android:id="@+id/repeatLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/schedule_repeat_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:text="반복"
                    android:textSize="16sp" />


                <LinearLayout
                    android:id="@+id/repeat_linearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp">
                    <TextView
                        android:id="@+id/repeat_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="설정 안함"/>

                    <android.widget.Button
                        android:id="@+id/repeat_btn"
                        android:layout_width="12dp"
                        android:layout_height="11dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="36dp"
                        android:background="@drawable/arrow_resize"
                        android:rotation="-270"/>
                </LinearLayout>

                <!--            <Spinner-->
                <!--                android:id="@+id/alarm_spinner"-->
                <!--                android:layout_width="40dp"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                android:layout_weight="0"-->
                <!--                android:layout_marginTop="15dp"-->
                <!--                android:spinnerMode="dropdown"-->
                <!--                android:ems="1"-->
                <!--                android:entries="@array/times"/>-->

            </LinearLayout>

            <View
                android:id="@+id/view5"
                android:layout_width="387dp"
                android:layout_height="1dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:background="#8085AFD6" />

            <LinearLayout
                android:id="@+id/memo_leanearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/schedule_memo_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="2"
                    android:backgroundTint="#00000000"
                    android:hint="메모"
                    android:textColor="#757575"
                    android:textSize="16sp" />

            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/schedule_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="등록"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout15"
            tools:layout_editor_absoluteX="15dp" />



    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>