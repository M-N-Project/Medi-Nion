<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/home_hot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="좋아요 댓글 가장 많은 게시물 제목"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/home_hot_likeImg"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="0dp"
        android:layout_weight="1"
        app:layout_constraintStart_toEndOf="@+id/home_hot"
        app:layout_constraintTop_toTopOf="@+id/home_hot"
        app:srcCompat="@drawable/favorite_border" />

    <TextView
        android:id="@+id/home_hot_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_weight="0.5"
        android:text="20"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/home_hot_likeImg"
        app:layout_constraintEnd_toStartOf="@+id/home_hot_commImg"
        app:layout_constraintStart_toEndOf="@+id/home_hot_likeImg"
        app:layout_constraintTop_toTopOf="@+id/home_hot_likeImg" />

    <ImageView
        android:id="@+id/home_hot_commImg"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="0dp"
        android:layout_weight="1"
        app:layout_constraintStart_toEndOf="@+id/home_hot_likeImg"
        app:layout_constraintTop_toTopOf="@+id/home_hot_likeImg"
        app:srcCompat="@drawable/comment_icon" />


    <TextView
        android:id="@+id/home_hot_comm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_weight="0.5"
        android:text="20"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/home_hot_commImg"
        app:layout_constraintStart_toEndOf="@+id/home_hot_commImg"
        app:layout_constraintTop_toTopOf="@+id/home_hot_commImg" />

</LinearLayout>