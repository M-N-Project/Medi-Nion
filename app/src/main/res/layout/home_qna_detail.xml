<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/detail_box"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/main_border_gray"
        android:text=" "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/home_qna_title"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginTop="24dp"
        android:elevation="5dp"
        android:ellipsize="end"
        android:gravity="left"
        android:singleLine="true"
        android:text="여기는 QnA 게시판의 최근 게시물을 표시합니다"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/home_qna_titleStart"
        app:layout_constraintTop_toTopOf="@+id/detail_box" />

    <TextView
        android:id="@+id/home_qna_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:elevation="5dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="여기는 QnA 게시판 최근 게시물의 상세 내용을 표시하는 공간으로써 이렇게 하면 자연스럽게 글자가 끊어질때까지 슬슬 말줄임표로 표시되어야할듯"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/detail_box"
        app:layout_constraintStart_toStartOf="@+id/home_qna_title"
        app:layout_constraintTop_toBottomOf="@+id/home_qna_title" />

    <TextView
        android:id="@+id/home_qna_titleStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:elevation="5dp"
        android:text="Q."
        android:textColor="@color/color3"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/detail_box"
        app:layout_constraintTop_toTopOf="@+id/detail_box" />

</androidx.constraintlayout.widget.ConstraintLayout>