<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/password_now_view"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="기존 비밀번호"
            android:textColor="#000000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/password_now_editText"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:ems="5"
            android:hint="기존 비밀번호 입력"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:textColor="#676767" />

        <TextView
            android:id="@+id/password_new_view"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="새 비밀번호"
            android:textColor="#000000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/password_new_editText"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:ems="5"
            android:hint="숫자, 문자, 특수문자 중 2가지 포함(8~15자)"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:textColor="#676767" />

        <TextView
            android:id="@+id/password_check_view"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="새 비밀번호 확인"
            android:textColor="#000000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/password_check_editText"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:ems="5"
            android:hint="새 비밀번호 재입력"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:textColor="#676767" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>