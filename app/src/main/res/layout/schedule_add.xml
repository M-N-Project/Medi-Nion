<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="일정 이름"
            android:inputType="textPersonName"
            tools:ignore="TouchTargetSizeCheck"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="16dp"
            android:background="#ffffff"/>

        <View
            android:id="@+id/view"
            android:layout_width="387dp"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="20dp"
            android:background="#8085AFD6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/start_time_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/day_night1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="오전"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/start_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="00   :   00"
                    android:textSize="20sp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="~" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/end_time_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/day_night2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:text="오전" />

                <TextView
                    android:id="@+id/end_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="00   :   00"
                    android:textSize="20sp"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="387dp"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="20dp"
            android:background="#8085AFD6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/schedule_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="색상"
                android:textSize="20sp"/>
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="310dp"
                app:srcCompat="@drawable/schedule_color" />

        </LinearLayout>

        <View
            android:id="@+id/view3"
            android:layout_width="387dp"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="20dp"
            android:background="#8085AFD6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/schedule_alarm_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:text="알람"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/schedule_alarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_marginTop="15dp"
                android:layout_marginRight="25dp"
                android:text="없음"
                android:textSize="20sp"/>
        </LinearLayout>

        <View
            android:id="@+id/view4"
            android:layout_width="387dp"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="20dp"
            android:background="#8085AFD6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/schedule_memo_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:text="메모"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/schedule_memo"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_weight="0"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="17dp"
                android:layout_marginStart="10dp"
                android:gravity="top"
                android:ems="10"
                android:hint="메모를 작성해주세요."
                android:background="#ffffff"
                android:textSize="20sp"/>
        </LinearLayout>

        <Button
            android:id="@+id/schedule_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="30dp"
            android:text="등록"
            android:textColor="@color/white"/>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>