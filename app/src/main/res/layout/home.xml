<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 최신 qna -->
            <include layout="@layout/home_qna"/>

            <!-- 첫번째 광고 -->
            <include layout="@layout/ad_viewpager2" />


            <!-- 즐겨찾는 게시판 -->

            <!-- HOT 게시물 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/home_boardList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/home_qna_detail"
                android:paddingBottom="20dp">

                <TextView
                    android:id="@+id/home_boardList_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:text="즐겨찾는 게시판"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/home_boardList"
                    app:layout_constraintTop_toTopOf="@+id/home_boardList" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/home_boardList_title">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/home_boardList1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_weight="1"
                            android:text="자유 게시판"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/home_boardList2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_weight="1"
                            android:text="직종별 게시판"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/home_boardList3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_weight="1"
                            android:text="진료과별 게시판"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/home_boardList4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_weight="1"
                            android:text="장터 게시판"
                            android:textSize="12sp" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/home_boardList5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_weight="1"
                            android:text="QnA 게시판"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/home_boardList6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_weight="1"
                            android:text="학회 및 세미나 정보"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/home_boardList7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_weight="1"
                            android:text="채용 정보"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/home_boardList8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_weight="1"
                            android:text="의료 뉴스"
                            android:textSize="12sp" />


                    </LinearLayout>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 구독 채널 새소식 -->

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/detail_box_hot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/home_qna_detail"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:paddingBottom="5dp">

                <TextView
                    android:id="@+id/home_hot_title"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:text="HOT 게시물"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/detail_box_hot"
                    app:layout_constraintTop_toTopOf="@+id/detail_box_hot" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8sp"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/home_hot_title">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/hot_basic_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="10"
                            android:text="자유 게시판"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/btn_hot_basic_more"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="더보기"
                            android:textSize="10sp" />

                    </LinearLayout>

                    <include
                        android:id="@+id/hot_detail_basic1"
                        layout="@layout/home_hot_detail"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:layout_weight="0" />

                    <LinearLayout
                        android:id="@+id/hot_detail_basic_more"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <include
                            android:id="@+id/hot_detail_basic2"
                            layout="@layout/home_hot_detail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp" />

                        <include
                            android:id="@+id/hot_detail_basic3"
                            layout="@layout/home_hot_detail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp" />
                    </LinearLayout>

                    <!--                    구분선 긋기-->
                    <View
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:layout_marginBottom="10dp"
                        android:background="#289C9C9C" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="8sp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/hot_job_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="10"
                            android:text="직종별 게시판"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/btn_hot_job_more"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="더보기"
                            android:textSize="10sp" />

                    </LinearLayout>

                    <include
                        android:id="@+id/hot_detail_job1"
                        layout="@layout/home_hot_detail"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:layout_weight="0" />

                    <LinearLayout
                        android:id="@+id/hot_detail_job_more"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <include
                            android:id="@+id/hot_detail_job2"
                            layout="@layout/home_hot_detail"
                            android:layout_width="350dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp" />

                        <include
                            android:id="@+id/hot_detail_job3"
                            layout="@layout/home_hot_detail"
                            android:layout_width="350dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp" />
                    </LinearLayout>

                    <!--                    구분선 긋기-->
                    <View
                        android:id="@+id/view1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="10dp"
                        android:background="#289C9C9C" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="8sp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/hot_dept_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="10"
                            android:text="진료과별 게시판"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/btn_hot_dept_more"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="더보기"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <include
                        android:id="@+id/hot_detail_dept1"
                        layout="@layout/home_hot_detail"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:layout_weight="0" />

                    <LinearLayout
                        android:id="@+id/hot_detail_dept_more"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <include
                            android:id="@+id/hot_detail_dept2"
                            layout="@layout/home_hot_detail"
                            android:layout_width="350dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp" />

                        <include
                            android:id="@+id/hot_detail_dept3"
                            layout="@layout/home_hot_detail"
                            android:layout_width="350dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp" />
                    </LinearLayout>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <include layout="@layout/home_busi_new"/>

            <!-- 그냥 여백용 -->
            <View
                android:id="@+id/marginView"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_business" />

            <!-- 추천 비즈니스채널 프로필 -->

            <View
                android:id="@+id/view3"
                android:layout_width="400dp"
                android:layout_height="2.5dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:background="#8BE0C4" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/home_business_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:text="nickname"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/detail_box_hot"
                    app:layout_constraintTop_toTopOf="@+id/detail_box_hot" />

                <TextView
                    android:id="@+id/home_business_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="10dp"
                    android:text="님을 위한 비즈니스 추천 채널"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/detail_box_hot"
                    app:layout_constraintTop_toTopOf="@+id/detail_box_hot" />
            </LinearLayout>


            <com.example.medi_nion.NestedScrollableHost
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/BusinessHotRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal"
                    android:nestedScrollingEnabled="true"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/business_hot_item" />
            </com.example.medi_nion.NestedScrollableHost>

            <View
                android:id="@+id/view2"
                android:layout_width="400dp"
                android:layout_height="2.5dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:background="#8BE0C4" />

            <!-- 두번째 광고 -->
            <include
                layout="@layout/big_ad_viewpager"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>